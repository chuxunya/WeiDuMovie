<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_yp_back"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/left_shape"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:layout_marginTop="37dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:text="写评价"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:background="#1c2243"
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:id="@+id/tv_yp_name"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="悲伤逆流成河"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_pingfen"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:text="我的评分(5.5分)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:id="@+id/rb_yp_pingfen"
            android:layout_marginLeft="18dp"
            android:progressTint="#EC066C"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="26dp"
                android:text="极差"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="70dp"
                android:text="较差"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="114dp"
                android:text="一般"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="158dp"
                android:text="不错"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="202dp"
                android:text="很好"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:textSize="12sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:text="写下您对影片的看法吧"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_yp_movie"
            android:background="@drawable/back_jiitem"
            android:layout_marginTop="10dp"
            android:textColor="@color/write"
            android:layout_gravity="center_horizontal"
            android:layout_width="312dp"
            android:layout_height="129dp"/>
        <LinearLayout
            android:background="#1c2243"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="保定国际影城"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:text="写下您对影院的看法吧"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_yp_cni"
            android:background="@drawable/back_jiitem"
            android:layout_marginTop="10dp"
            android:textColor="@color/write"
            android:layout_gravity="center_horizontal"
            android:layout_width="312dp"
            android:layout_height="129dp"/>
        <Button
            android:id="@+id/bt_yp_push"
            android:layout_marginTop="20dp"
            android:text="提交"
            android:textColor="#fff"
            android:layout_marginBottom="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn"
            android:layout_width="312dp"
            android:layout_height="36dp"/>
    </LinearLayout>

</ScrollView>