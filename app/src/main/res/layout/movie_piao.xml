<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/piao"
        android:layout_height="145dp">
        <TextView
            android:textColor="#141931"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="我的电影票"
            />
        <TextView
            android:id="@+id/piao_name"
            android:textColor="#141931"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/moviezuo"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="49dp"
            android:src="@mipmap/zuowei"
            android:layout_width="41dp"
            android:layout_height="37dp"/>
        <TextView
            android:id="@+id/piao_zuowei"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="40dp"
            android:text="5排5座"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/piao_cinema_name"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/moviezuo"
            android:layout_marginTop="49dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/piao_ting_name"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/moviezuo"
            android:layout_marginTop="72dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/piao_time"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/moviezuo"
            android:layout_marginTop="96dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/piao_movie_time"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/moviezuo"
            android:layout_marginTop="119dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginBottom="7dp"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:textSize="12sp"
            android:text="查看取票码"
            android:background="@drawable/btn"
            android:id="@+id/piao_btn"
            android:layout_width="76dp"
            android:layout_height="28dp"/>

    </RelativeLayout>

</LinearLayout>
