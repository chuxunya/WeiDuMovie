<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <ImageView
            android:id="@+id/fanhui_more"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/left_shape"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/btn"
            android:src="@mipmap/sousuo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edit_serach_more"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/back01"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:hint="请输入影片名称"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dp_86"
            android:layout_marginRight="@dimen/dp_24"
            android:paddingLeft="@dimen/dp_20" />
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_more"
        app:tabTextColor="@color/write"
        android:background="@color/blue_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>