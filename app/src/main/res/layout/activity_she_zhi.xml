<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@mipmap/left_shape"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"/>
        <TextView
            android:layout_marginTop="@dimen/dp_37"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_16"
            android:text="我的"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_88"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_21"
        android:background="@drawable/back_jiitem">
        <LinearLayout
            android:id="@+id/shezhi_qingchu"
            android:orientation="horizontal"
            android:layout_width="@dimen/dp_312"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mysetting_clear"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_18"
                android:textSize="14sp"
                android:textColor="#deffffff"
                android:text="清除缓存"
                />
            <TextView
                android:id="@+id/mysetting_number"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:textSize="12sp"
                android:textColor="#deffffff"
                android:text="10M"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_200"
                android:layout_marginTop="@dimen/dp_17"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shezhi_gengxin"
            android:orientation="horizontal"
            android:layout_width="@dimen/dp_312"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_18"
                android:textSize="14sp"
                android:textColor="#deffffff"
                android:text="版本更新"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/shape"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_205"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shezhi_chongzhipassword"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/back_jiitem"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_18"
            android:textSize="14sp"
            android:textColor="#deffffff"
            android:text="重置密码"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/shape"
            android:layout_marginLeft="@dimen/dp_205"
            android:layout_marginTop="@dimen/dp_21"
            />
    </LinearLayout>
    <Button
        android:id="@+id/shezhi_button"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/back_jiitem"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#fff"
        android:text="退出登录"
        />

</LinearLayout>