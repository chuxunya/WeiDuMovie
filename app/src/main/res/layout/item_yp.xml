<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head_ping"
        app:roundedCornerRadius="@dimen/dp_25"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"/>
    <TextView
        android:id="@+id/name_ping"
        android:layout_toRightOf="@id/head_ping"
        android:layout_marginLeft="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:text="冷月女神"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/time_ping"
        android:layout_marginLeft="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:text="04-24 11:25"
        android:layout_alignParentRight="true"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/score_ping"
        android:layout_toRightOf="@id/head_ping"
        android:layout_marginLeft="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:text="9分"
        android:layout_below="@id/name_ping"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ping"
        android:textSize="@dimen/sp_12"
        android:text="作为第一阶段的节位"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_below="@id/head_ping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@mipmap/zan"
        android:layout_below="@+id/ping"
        android:layout_marginTop="@dimen/dp_21"
        android:id="@+id/zan_ping"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"/>
    <TextView
        android:id="@+id/zan_num_ping"
        android:layout_toRightOf="@id/zan_ping"
        android:layout_marginLeft="@dimen/dp_7"
        android:textSize="@dimen/sp_10"
        android:text="1314521"
        android:layout_below="@id/ping"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fu_num"
        android:layout_marginLeft="@dimen/dp_12"
        android:textSize="@dimen/sp_10"
        android:text="3w未亡人进行了回复"
        android:layout_alignParentRight="true"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_below="@id/ping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/zan_ping"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@color/colorPrimary"/>
</RelativeLayout>