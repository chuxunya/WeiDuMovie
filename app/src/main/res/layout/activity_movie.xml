<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back">
    <com.bw.movie.view.NoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:background="@color/blue_s">
        <RelativeLayout
            android:id="@+id/relat_a"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/yingpian"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_36"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/back01">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/movie_yes" />
                <TextView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_20"
                    android:text="电影"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#E91E63"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:visibility="gone">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/movie_no"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relat_b"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/shapes"
                android:visibility="gone"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_36"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/back01">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/cimema_yes"/>
                <TextView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_20"
                    android:text="影院"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#e8185e"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/cinema_no"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relat_c"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/my"
                android:visibility="gone"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_36"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/back01">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/my_yes"
                    />
                <TextView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_20"
                    android:text="我的"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#e8185e"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/my_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/my_no"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>