<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/jc_choose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"/>
                <TextView
                    android:id="@+id/movie_name"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/sp_10"
                    android:text="付出着联盟"
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/sp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:text="时长"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/movie_tiime"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/sp_10"
                        android:text="182分钟"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:text="评分"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/score_tiime"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/sp_10"
                        android:text="9.5分"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:text="导演"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/director_tiime"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/sp_10"
                        android:text="安东尼奥  "
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/blue_s">
                <TextView
                    android:id="@+id/area_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区域"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background" />
                <TextView
                    android:id="@+id/day_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期"
                    android:layout_toRightOf="@+id/area_choose"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_46"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background" />
                <TextView
                    android:id="@+id/price_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格最低"
                    android:layout_toRightOf="@+id/day_choose"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_46"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cardview_light_background" />
                <ImageView
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/search_choose"
                    android:src="@mipmap/sousuo"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_choose"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/details_back"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@mipmap/left_shape" />
</RelativeLayout>