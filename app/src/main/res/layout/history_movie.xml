<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xz_linear"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/back_jiitem"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_121">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/kanguo_img"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_101"/>
        <TextView
            android:id="@+id/kanguo_name"
            android:layout_marginTop="@dimen/dp_10"
            android:text="哈哈哈哈"
            android:layout_marginLeft="@dimen/dp_114"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dp_50"
            android:text="哈哈哈哈哈哈"
            android:layout_marginLeft="@dimen/dp_114"
            android:id="@+id/kanguo_time"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="@dimen/dp_87"
            android:textSize="@dimen/sp_12"
            android:textColor="#fff"
            android:text="评价"
            android:layout_marginLeft="@dimen/dp_114"
            android:id="@+id/kanguo_btn"
            android:background="@drawable/btn"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_24"/>
    </RelativeLayout>
</LinearLayout>
