<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jy_lin"
    android:background="@color/back">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/back_jiitem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_98"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_jijing"
        app:roundedCornerRadius="@dimen/dp_5"
        android:background="@drawable/banner"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_108"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_10"/>
    <TextView
        android:id="@+id/text_name"
        android:layout_toRightOf="@id/image_jijing"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_time"
        android:layout_toRightOf="@id/image_jijing"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/text_name"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_guankan"
        android:layout_toRightOf="@id/image_jijing"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_alignBottom="@id/image_jijing"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/yuy"
        android:text="预约"
        android:textColor="@color/cardview_light_background"
        android:background="@drawable/btn"
        android:layout_alignBottom="@id/image_jijing"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_20"/>
    <Button
        android:id="@+id/yuy2"
        android:visibility="gone"
        android:text="已预约"
        android:textColor="@color/cardview_light_background"
        android:background="@drawable/btn22"
        android:layout_alignBottom="@id/image_jijing"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_20"/>
</RelativeLayout>
