<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/back">
        <ImageView
            android:id="@+id/position_near"
            android:src="@mipmap/weizhi"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"/>
        <TextView
            android:id="@+id/city_near"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/cardview_light_background"
            android:text="北京"
            android:layout_toRightOf="@id/position_near"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/search_near"
            android:src="@mipmap/sousuo"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_27"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"/>
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        app:tabTextColor="@color/cardview_light_background"
        android:id="@+id/tab_near"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager_near"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10" />
</LinearLayout>