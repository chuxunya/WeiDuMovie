<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">
    <ImageView
        android:visibility="gone"
        android:id="@+id/nosearch"
        android:src="@mipmap/nosearch"
        android:layout_marginTop="@dimen/dp_202"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/nono"
        android:layout_below="@id/nosearch"
        android:text="暂无相关信息"
        android:textSize="@dimen/sp_14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <ImageView
            android:id="@+id/image_dy_ss"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/left_shape"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_centerVertical="true"
            />
        <EditText
            android:hint="请输入影片名称"
            android:id="@+id/edit_dy_sousuo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/back01"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dp_86"
            android:layout_marginRight="@dimen/dp_24"
            android:paddingLeft="@dimen/dp_20" />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_dy_sousuo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>